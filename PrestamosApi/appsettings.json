{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": ""
  },
  "Jwt": {
    "Key": "PrestamosAppSecretKey2024SecureToken!@#$%",
    "Issuer": "PrestamosApi",
    "Audience": "PrestamosApp",
    "ExpireMinutes": 1440
  },
  "Twilio": {
    "AccountSid": "${TWILIO_ACCOUNT_SID}",
    "AuthToken": "${TWILIO_AUTH_TOKEN}",
    "FromNumber": "${TWILIO_FROM_NUMBER}"
  },
  "Notifications": {
    "TimeZone": "America/Bogota",
    "SendHour": 8,
    "SendMinute": 0
  }
}